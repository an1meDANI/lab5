<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="456dp"
        android:layout_height="852dp"
        tools:layout_editor_absoluteX="-40dp"
        tools:layout_editor_absoluteY="-7dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="97dp"
            android:text="Тестирование"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.622"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="300dp"
            android:layout_marginBottom="478dp"
            android:text="Как звали создателя компьютерной игры &quot;Тетрис&quot;?"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.48000002" />

        <Button
            android:id="@+id/button2"
            android:layout_width="234dp"
            android:layout_height="59dp"
            android:layout_marginStart="132dp"
            android:layout_marginBottom="483dp"
            android:onClick="onclick_test"
            android:text="Ответить"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.851" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>